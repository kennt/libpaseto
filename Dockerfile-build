FROM ubuntu:20.04

WORKDIR /libpaseto

SHELL ["/bin/bash", "-c"]

RUN echo "Etc/UTC" > /etc/timezone

RUN apt-get update && \
	DEBIAN_FRONTEND=noninteractive \
	apt-get -y --no-install-recommends install \
		build-essential \
		clang \
		gdb \
		cmake \
		gdb \
		git \
		ca-certificates \
		pkg-config \
		cmake-data \
		llvm \
		libsodium-dev


CMD ["tail", "-f", "/dev/null"]
